            </Grid.RowDefinitions>
            <TextBlock Margin="20" TextWrapping="Wrap" Grid.Row="0" Name="questionText">Daten werden geladen..</TextBlock>
            <StackPanel Margin="20,5,20,5" Grid.Row="1">
                <CheckBox Name="answer1" >1. Klick mich hart!</CheckBox>
