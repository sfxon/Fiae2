                <CheckBox Name="answer3">3. Wer über die Brücke des Todes will gehn, der muss dreimal Rede und Antwort stehn.</CheckBox>
                <CheckBox Name="answer4">4. abc</CheckBox>
                <CheckBox Name="answer5">5. asdflkj</CheckBox>
                <CheckBox Name="answer6">6.</CheckBox>
                <CheckBox Name="answer7">7.</CheckBox>
                <CheckBox Name="answer8">8.</CheckBox>
                <Button Name="btn_check" Grid.Row="1" Height="40" Width="150" HorizontalAlignment="Left" Margin="0 20">Prüfen</Button>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
